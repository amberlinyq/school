{
  "manifest_version": 3,
  "name": "Classroom Activity Tracker",
  "version": "1.0",
  "description": "Stay focused on your school work! This extension helps you track your learning progress and reminds you to stay on task.",
  "permissions": [
    "tabs",
    "history",
    "storage",
    "sidePanel",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Classroom Activity Tracker - Stay Focused!"
  }
} 